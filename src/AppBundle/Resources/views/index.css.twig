
body > .loader {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, .2);
    z-index: 1000;
}

body > .loader > .text {
    color: #263238;
    padding: 1em;
}

.menu {
    background: #FAFAFA;
    text-align: right;
    line-height: 3em;
    padding: 0 1em;
}

.menu a {
    display: inline-block;
    line-height: 3em;
    padding: 0 .5em;
    text-decoration: none;
    color: #212121;
}

.menu a.active {
    background: #E0E0E0;
}

.admin {
    max-width: 1000px;
    margin: 1em auto;
    padding: 1em;
    border: 1px solid #E0E0E0;
}

.order {
    max-width: 600px;
    margin: 1em auto;
    padding: 1em;
    border: 1px solid #E0E0E0;
}